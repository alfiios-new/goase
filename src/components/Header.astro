---
import Link from '@/components/Link.astro'
import { NAV_LINKS, SOCIAL_LINKS } from '@/consts'
import { cn } from '@/lib/utils'
import SocialIcons from '@/components/SocialIcons.astro'
---

<header transition:persist>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between px-4 py-3"
  >

    <!-- LOGO REMOVED -->
    <div class="w-6"></div>

    <!-- CENTER AREA: ICONS + MENU -->
    <div class="flex flex-col items-center gap-2 flex-1">

      <!-- SOCIAL ICONS -->
      <div class="flex items-center gap-2">
        <SocialIcons links={SOCIAL_LINKS} />
      </div>

      <!-- NAV MENU IMPROVED -->
      <nav class="flex items-center gap-10 text-base font-medium mt-2">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-muted-foreground hover:text-foreground capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>

    </div>

    <!-- RIGHT SPACER -->
    <div class="w-6"></div>

  </div>
</header>
